generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  credits Int @default(10)

  totalImagesProcessed Int @default(0)
  totalProcessDuration Int @default(0)

  monthlyImagesProcessed Int @default(0)
  monthlyProcessDuration Int @default(0)

  jobs         Job[]
  pipelines    Pipeline[]
  subscription Subscription?
}

model Subscription {
  id Int @id @default(autoincrement())

  subscriptionId String
  customerId     String
  orderId        String
  productId      String
  variantId      String

  status           String
  cardBrand        String
  cardLastFour     String
  billingAnchor    String
  updatePaymentUrl String

  createdAt DateTime
  endsAt    DateTime?
  renewsAt  DateTime

  user   Account @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int     @unique
}

model Pipeline {
  id       Int    @id @default(autoincrement())
  name     String
  dataJson String

  runCount            Int       @default(0)
  lastRun             DateTime?
  processedImageCount Int       @default(0)

  user   Account @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  jobs Job[]
}

model Job {
  id         String    @id @default(uuid())
  status     String
  imageCount Int
  progress   Int
  createdAt  DateTime  @default(now())
  finishedAt DateTime?

  pipeline   Pipeline @relation(fields: [pipelineId], references: [id], onDelete: Cascade)
  pipelineId Int

  user   Account @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  files File[]
}

model File {
  id         Int    @id @default(autoincrement())
  storageKey String

  job   Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId String
}
